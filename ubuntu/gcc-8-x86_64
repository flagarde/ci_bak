FROM ubuntu:jammy

####################
# install packages #
####################

ENV DEBIAN_FRONTEND=noninteractive

RUN mkdir -p /scripts
COPY ./scripts/bootstrap.sh /scripts
WORKDIR /scripts
RUN ls
RUN chmod +x bootstrap.sh; ./bootstrap.sh
RUN apt-get install -y --no-install-recommends g++-8
ENV CC=gcc-8
ENV CXX=g++-8
