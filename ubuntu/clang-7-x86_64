FROM ubuntu:jammy

####################
# install packages #
####################

ENV DEBIAN_FRONTEND=noninteractive

RUN mkdir -p /scripts
COPY ./scripts/bootstrap.sh /scripts
WORKDIR /scripts
RUN ls
RUN chmod +x bootstrap.sh; ./bootstrap.sh
RUN apt-get install -y --no-install-recommends clang-7
ENV CC=clang-7
ENV CXX=clang++-7
