FROM ubuntu:jammy

####################
# install packages #
####################

ENV DEBIAN_FRONTEND=noninteractive
ENV CC=gcc
ENV CXX=g++
COPY ./ubuntu/scripts/bootstrap.sh .
COPY ./ubuntu/keys/* ./keys/
RUN chmod +x bootstrap.sh; ./bootstrap.sh; 
