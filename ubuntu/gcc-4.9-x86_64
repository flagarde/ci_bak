FROM ubuntu:jammy

####################
# install packages #
####################

ENV DEBIAN_FRONTEND=noninteractive

RUN mkdir -p /scripts
COPY ./scripts/bootstrap.sh /scripts
WORKDIR /scripts
RUN ls
RUN chmod +x bootstrap.sh; ./bootstrap.sh
RUN apt-get install -y --no-install-recommends g++-4.9
ENV CC=gcc-4.9
ENV CXX=g++-4.9
